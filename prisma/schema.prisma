generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  role         UserRole
  receipts     Receipt[] @relation("WrittenBy")
  sectionId    String?
  section      Section?  @relation("ManagerSection", fields: [sectionId], references: [id])
}

model Section {
  id        String    @id @default(cuid())
  name      String    @unique
  managers  User[]    @relation("ManagerSection")
  receipts  Receipt[] @relation("ReceiptSection")
}

model Receipt {
  id                  String        @id @default(cuid())
  title               String
  description         String?
  imageUrl            String        @db.VarChar(2048)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  status              ReceiptStatus
  writtenById         String
  currentApproverRole UserRole?
  lastActionByRole    UserRole?
  rejectionReason     String?
  managerActionBy     String?
  dgmActionBy         String?
  gmActionBy          String?
  securityActionBy    String?
  writtenBy           User          @relation("WrittenBy", fields: [writtenById], references: [id])
  sectionId           String
  section             Section       @relation("ReceiptSection", fields: [sectionId], references: [id])
}

enum UserRole {
  HR
  MANAGER
  DGM
  GM
  SECURITY
}

enum ReceiptStatus {
  PENDING_MANAGER_APPROVAL
  APPROVED_BY_MANAGER_PENDING_DGM
  PENDING_DGM
  APPROVED_BY_DGM_PENDING_GM
  APPROVED_FINAL
  REJECTED_BY_MANAGER
  REJECTED_BY_DGM
  REJECTED_BY_GM
}