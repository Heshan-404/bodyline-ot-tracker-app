generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  username     String    @unique
  email        String    @unique
  passwordHash String
  role         UserRole
  receipts     Receipt[] @relation("WrittenBy")
}

model Receipt {
  id                  String        @id @default(cuid())
  title               String
  description         String?
  imageUrl            String        @db.VarChar(2048)
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
  status              ReceiptStatus
  writtenById         String
  currentApproverRole UserRole?
  lastActionByRole    UserRole?
  rejectionReason     String?
  dgmActionBy         String?
  gmActionBy          String?
  securityActionBy    String?
  writtenBy           User          @relation("WrittenBy", fields: [writtenById], references: [id])
}

enum UserRole {
  HR
  DGM
  GM
  SECURITY
}

enum ReceiptStatus {
  PENDING_DGM
  APPROVED_BY_DGM_PENDING_GM
  APPROVED_FINAL
  REJECTED_BY_DGM
  REJECTED_BY_GM
}
